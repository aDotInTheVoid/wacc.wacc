#ifndef IO_WACC_IN
#define IO_WACC_IN

#include "utils.wacc.in"
#include "../gen/line_alloc.wacc.in"

// Iurii extension;
extern int getchar()

char[][] read_all(char[] sentinal) is
    char[][] lines = call alloc_lines();
    int linesPos = 0;
    int linePos = 0;
    bool running = true;
    
    bool inStrChr = false;
    bool inEscape = false;

    while running do
        int c = call getchar();
        if c == -1 then
            running = false
        else 
            if c == ord '\n'  then
                if inStrChr then
                    lines[linesPos][linePos] = chr c
                else
                    linesPos = linesPos + 1;
                    linePos = 0
                fi
            else
                if len lines[linesPos] == 0 then
                    lines[linesPos] = call alloc_line()
                ENDIF ;
                lines[linesPos][linePos] = chr c;
                if (c == ord '\'' || c == ord '\"') && !inEscape then
                    inStrChr = !inStrChr
                ENDIF ;
                if inStrChr && c == ord '\\' then
                    inEscape = !inEscape
                else
                    inEscape = false
                fi
            fi
        fi ;
        INC(linePos)
    done ;

    // Maybe add sentinal
    lines[linesPos+1] = sentinal;

    return lines
end

VOID printStr(char[] str, int start, int lenn) is
    int i = 0;
    while (i < lenn) do
        print str[start + i];
        i = i + 1
    done ;
ENDV

#endif
